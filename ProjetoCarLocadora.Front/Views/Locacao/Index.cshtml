@model IEnumerable<ProjetoCarLocadora.Models.Models.LocacaoModel>

@{
    ViewData["Title"] = "Index";
}
<div class="row mt-5 mb-3">
	<div class="col-md-6">
		<h2 class="fw-bold" style="margin-bottom: 25px;">Locações</h2>
	</div>
	<div class="col-md-6 text-end">
			<a class="btn btn-success m-2 btn-sm fw-bold text-white text-decoration-none" asp-action="Create">Nova Locação</a>
	</div>
</div>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.ClienteCPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormaPagamentoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VeiculoPlaca)
            </th>
         
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.ClienteCPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormaPagamentoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VeiculoPlaca)
            </td>
            
           <td>
                @Html.ActionLink("Editar", "Edit", new { valor=item.Id }, new { @class = "btn btn-primary btn-sm text-white text-decoration-none fw-bold" }) |
				@Html.ActionLink("Detalhes", "Details", new {  valor=item.Id  }, new { @class = "btn btn-warning btn-sm text-white text-decoration-none fw-bold" })
            </td>
        </tr>
}
    </tbody>
</table>
