@model IEnumerable<ProjetoCarLocadora.Models.Models.VeiculoModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row mt-5 mb-3">
	<div class="col-md-6">
		<h2 class="fw-bold" style="margin-bottom: 25px;">Veículos</h2>
	</div>
	<div class="col-md-6 text-end">
			<a class="btn btn-success m-2 btn-sm fw-bold text-white text-decoration-none" asp-action="Create">Novo Veículo</a>
	</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combustivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cor)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Combustivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cor)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
           
            <td>
                @Html.ActionLink("Editar", "Edit", new { valor=item.Placa }, new { @class = "btn btn-primary btn-sm text-white text-decoration-none fw-bold" }) |
				@Html.ActionLink("Detalhes", "Details", new {  valor=item.Placa  }, new { @class = "btn btn-warning btn-sm text-white text-decoration-none fw-bold" }) 
            </td>
        </tr>
}
    </tbody>
</table>
