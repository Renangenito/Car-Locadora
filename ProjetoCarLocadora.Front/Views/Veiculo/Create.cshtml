@model ProjetoCarLocadora.Models.Models.VeiculoModel

@{
    ViewData["Title"] = "Create";
}



<h4 class="fw-bold">Novo Veículo</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Placa" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="Placa" class="form-control" />
                        <span asp-validation-for="Placa" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Chassi" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="Chassi" class="form-control" />
                        <span asp-validation-for="Chassi" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Marca" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Modelo" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="Modelo" class="form-control" />
                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Combustivel" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="Combustivel" class="form-control" />
                        <span asp-validation-for="Combustivel" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Cor" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="Cor" class="form-control" />
                        <span asp-validation-for="Cor" class="text-danger"></span>
                    </div>
                </div>
            </div>

           
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Opcionais" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="Opcionais" class="form-control" />
                        <span asp-validation-for="Opcionais" class="text-danger"></span>
                    </div>
                </div>
                
            <div class="form-group form-check mt-3 mb-3">
                <label style="color: #563d7c;" class="form-check-label fw-bold">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>

            <div class="form-group mt-2 mb-2 d-flex justify-content-between">
                <div>
                    <a class="btn btn-outline-primary float-right" asp-action="Index"> < Voltar para Lista</a>
                </div>
                <input type="submit" value="Salvar Veiculo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
