@model ProjetoCarLocadora.Models.Models.VistoriaModel

@{
    ViewData["Title"] = "Create";
}

<h4 class="fw-bold">Nova Vistoria</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-2">
                <div class="col-md-6">
                   
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="LocacoesId" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <select asp-for="LocacoesId" asp-items="ViewBag.Locacao" class="form-control text-uppercase">
                        <option disabled selected>--Selecione uma Locação--</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="KmSaida" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="KmSaida" class="form-control" />
                        <span asp-validation-for="KmSaida" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CombustivelSaida" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="CombustivelSaida" class="form-control" />
                        <span asp-validation-for="CombustivelSaida" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ObservacaoSaida" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <textarea rows="2" asp-for="ObservacaoSaida" class="form-control"></textarea>
                        <span asp-validation-for="ObservacaoSaida" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ObservacaoEntrada" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <textarea rows="2" asp-for="ObservacaoEntrada" class="form-control"></textarea> 
                        <span asp-validation-for="ObservacaoEntrada" class="text-danger"></span>
                    </div>
                   
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="KmEntrada" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="KmEntrada" class="form-control" />
                        <span asp-validation-for="KmEntrada" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CombustivelEntrada" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="CombustivelEntrada" class="form-control" />
                        <span asp-validation-for="CombustivelEntrada" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-6">
                     <div class="form-group">
                        <label asp-for="DataHoraRetiradaPatio" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="DataHoraRetiradaPatio" class="form-control" />
                        <span asp-validation-for="DataHoraRetiradaPatio" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DataHoraDevolucaoPatio" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="DataHoraDevolucaoPatio" class="form-control" />
                        <span asp-validation-for="DataHoraDevolucaoPatio" class="text-danger"></span>
                    </div>
                </div>
            </div>

           

            <div class="form-group mt-2 mb-2 d-flex justify-content-between">
                <div>
                    <a class="btn btn-outline-primary float-right" asp-action="Index"> < Voltar para a lista</a>
                </div>
                <input type="submit" value="Salvar Vistoria" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


