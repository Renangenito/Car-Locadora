@model ProjetoCarLocadora.Models.Models.ManutencaoVeiculoModel

@{
    ViewData["Title"] = "Edit";
}

<h4 class="fw-bold">Editar Manutenção de Veiculo</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Id" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="Id" class="form-control" readonly/>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Descricao" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DataServico" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="DataServico" class="form-control" />
                        <span asp-validation-for="DataServico" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Garantia" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="Garantia" class="form-control" />
                        <span asp-validation-for="Garantia" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ValorServico" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="ValorServico" class="form-control" />
                        <span asp-validation-for="ValorServico" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DataInclusao" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="DataInclusao" class="form-control" readonly/>
                        <span asp-validation-for="DataInclusao" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DataAlteracao" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="DataAlteracao" class="form-control" readonly />
                        <span asp-validation-for="DataAlteracao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="VeiculoPlaca" style="color: #563d7c;" class="control-label fw-bold"></label>
                        <input asp-for="VeiculoPlaca" class="form-control" />
                        <span asp-validation-for="VeiculoPlaca" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-2 mb-2 d-flex justify-content-between">
                <div>
                    <a class="btn btn-outline-primary float-right" asp-action="Index"> < Voltar para a lista</a>
                </div>
                <input type="submit" value="Salvar Manutenção" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

