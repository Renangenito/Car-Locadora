<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoCarLocadora.Front</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoCarLocadora.Front.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav style="background-color: #563d7c;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light p-2 text-white bg-opacity-75 border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand border-end pe-4 fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">CarLocadora</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Cliente" asp-action="Index">Cliente</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Usuario" asp-action="Index">Usuario</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Veiculo" asp-action="Index">Veiculo</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link fw-bold text-white" asp-area="" asp-controller="FormaDePagamento" asp-action="Index">FormaDePagamento</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Categoria" asp-action="Index">Categoria</a>
                        </li>
                       @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color: #563d7c;" class="border-top footer text-muted p-2 text-white bg-opacity-75 border-bottom box-shadow mb-3">
        <div class="container text-white text-center">
            &copy; 2022 - ProjetoCarLocadora
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/inputmask/dist/jquery.inputmask.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
